<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Login | Members Only</title>
</head>

<body>
  <div class="sign-up-wrapper">
    <form action="" method="POST" class="sign-up">
      <div>
        <h1>Welcome back!</h1>
        <% if (errors) { %>
        <% errors.forEach(elem => { %>
        <p class="error"><%= elem.msg %> </p>
        <% }) %>
        <% } %>
      </div>
      <div class="form-section">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= email %>" placeholder="example@gmail.com" required>
      </div>
      <div class="form-section">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" value="<%= password %>" required>
      </div>
      <p>Don't have an account yet? <a href="/sign-up">Sign up</a></p>
      <button class="submit">Sign In</button>
    </form>
  </div>
</body>

</html>